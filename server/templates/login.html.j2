{% extends "base.html.j2" %}

{% block stylesheet %}
  <link rel="stylesheet" type="text/css" href="{{ url('static', filename='css/bootstrap.min.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ url('static', filename='css/login.css') }}" />
{% endblock %}

{% block title %}
  <title>JIS::Admin::Login</title>
{% endblock %}

{% block content %}
<div class="container">
  <form class="form-signin" method="post">
    {% if message %}
      <div class="alert alert-danger text-center" role="alert">
        {{ message }}
      </div>
    {% endif %}
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputLogin" class="sr-only">Username</label>
    <input type="login" name="username" class="form-control" placeholder="username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <div class="server-info">
      jenkins-gitlab-integrator
      <a href="https://github.com/alfss/jenkins-gitlab-integrator">---> code</a>
    </div>
  </form>
</div> <!-- /container -->
{% endblock %}
